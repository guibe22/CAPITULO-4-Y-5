@page "/"

<div class="card">

    <div class="card-header">
    <h1>TABLA DE MULTIPLICAR</h1>
  </div>
    <div class="form-group">
        <label for="numero">Ingrese un número:</label>
         <input type="number" class="form-control" @bind="numero" />
    </div>
       <button class="btn btn-primary col-2" @onclick="MostrarTabla">Mostrar Tabla</button>
    <table class="table table-bordered" hidden="@oculto">
        <thead>
            <tr>
                <th>Operacion</th>
                <th>Resultado</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 10; i++)
            {
                <tr>
                    <td> @(numero) x @(i) </td>
                    
                    <td>@(numero * i)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@code {
    private int numero;
    private bool oculto;

    void MostrarTabla(){

        oculto= false;
    }
    

    
}
